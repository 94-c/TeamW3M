<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="HomeDAO">
 
 <select id="selectProduct" resultType="com.spring.w3m.product.admin.vo.ProductVO">
  SELECT
 	*
  FROM
  	product
  ORDER BY 
  	prod_seq
 </select>	
 
 <select id="getProduct" resultType="com.spring.w3m.product.admin.vo.ProductVO">
 SELECT
 	*
  FROM
  	product
  WHERE
   prod_code=#{prod_code}
  </select>
  
  <select id="productInq" resultType="com.spring.w3m.inquiry.user.vo.InquiryVO">
  select
	*
  from 
  	inquiry
  where  
  	prod_code = #{prod_code}
	order by inq_seq desc
	limit #{listSize} offset #{startList}
  </select>
  
  <select id="getInquiryListCnt" resultType="int">
		select count(*) from inquiry where prod_code = #{prod_code}
	</select>
 </mapper>