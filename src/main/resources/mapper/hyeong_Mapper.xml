<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AdminDAO">

	<resultMap type="UserVO" id="userResult">
      <id property="user_seq" column="user_seq" />
      <result property="user_name" column="user_name" />
      <result property="user_id" column="user_id" />
      <result property="user_password" column="user_password" />
      <result property="user_birthday" column="user_birthday" />
      <result property="user_gender" column="user_gender" />
      <result property="user_email" column="user_email" />
      <result property="user_zipcode" column="user_zipcode" />
      <result property="user_address1" column="user_address1" />
      <result property="user_address2" column="user_address2" />
      <result property="user_join_date" column="user_join_date" />
      <result property="user_last_login" column="user_last_login" />
      <result property="user_phone" column="user_phone" />
      <result property="user_level" column="user_level" />
      <result property="user_point" column="user_point" />
      <result property="user_marketing_mail" column="user_marketing_mail" />
      <result property="user_marketing_sms" column="user_marketing_sms" />
      <result property="user_state" column="user_state" />
   </resultMap>

	<select parameterType="AdminVO" resultType="AdminVO" id="getAdmin">
		select * from admin_user 
	</select>
	
	
	<select id="getUserList" resultType="UserVO">
	select * from user_member 
	</select> 
	
	
	<select id="getUserListCnt" resultType="int">
		select count(*) from user_member
	</select>
	
	<!-- 페이징 처리 후 게시글 조회 -->
	<select id="getPageList" resultType="UserVO">
		select
			user_id,
			user_name,
			user_birthday,
			user_gender,
			user_address1,
			user_phone,
			user_join_date,
			user_state
		from user_member
		where 1=1
		<if test="searchType=='user_id' and keyword != null and keyword != '' ">
			AND user_id like CONCAT('%', #{keyword}, '%')
		</if>
		<if test="searchType=='user_name' and keyword != null and keyword != '' ">
			AND user_name like CONCAT('%', #{keyword}, '%')
		</if>
		order by user_id
		limit #{listSize} offset #{startList}
	</select>	
	
	<select id="getSearchCnt" parameterType="String" resultType="int">
		select count(*) from user_member
	<trim prefix="WHERE" prefixOverrides="AND|OR">
	<if test="keyword != null and keyword != '' ">
			<if test="searchType=='user_id'">
				AND user_id like CONCAT('%', #{keyword}, '%')
			</if>

			<if test="searchType=='user_name'">
				AND user_name like CONCAT('%', #{keyword}, '%')
			</if>
      </if>
	</trim>
	</select>
	
	<select id="getSearchPagingList" resultType="UserVO">
		SELECT * FROM user_member where 1=1
		<if test="searchCondition == 'user_id'">
			AND user_id LIKE '%'||#{searchKeyword}||'%'
		</if>
		<if test="searchCondition == 'user_name'">
			AND user_name LIKE '%'||#{searchKeyword}||'%'
		</if>
		order by user_seq desc
	</select>
	<!-- 여기까지 페이징 처리 -->
	
	<select id="loginCheck" resultType="String">
		SELECT admin_name FROM admin_user 
		WHERE admin_id = #{admin_id} AND admin_password = #{admin_password}
	</select>
		
	<select id="viewUser" resultType="AdminVO">
		SELECT
			admin_id,
			admin_name
		From admin_user
		WHERE admin_id = #{admin_id} AND admin_password = #{admin_password}
	</select>
	
	<select id="pwCheck" resultType="String">
		SELECT admin_password FROM admin_user WHERE admin_id = #{admin_id}
	</select>
	
	<!-- 문의사항 리스트 보기 -->
	<select id="getInquiryList" resultMap="inquiryResult">
	SELECT inq_seq, inq_title, inq_writer, inq_date, inq_cnt FROM inquiry ORDER BY inq_seq DESC
	</select>
	
	<resultMap type="InquiryVO" id="inquiryResult">
		<id property="inq_seq" column="inq_seq" />
		<result property="inq_title" column="inq_title" />
		<result property="inq_writer" column="inq_writer" />
		<result property="inq_content" column="inq_content" />
		<result property="inq_email" column="inq_email" />
		<result property="inq_date" column="inq_date" />
		<result property="inq_pass" column="inq_pass" />
		<result property="inq_cnt" column="inq_cnt" />
	</resultMap>
	
	
	<!-- 공지사항 리스트 sql -->
	<resultMap type="NoticeVO" id="noticeResult">
		<id property="nt_seq" column="nt_seq" />
		<result property="nt_title" column="nt_title" />
		<result property="nt_writer" column="nt_writer" />
		<result property="nt_content" column="nt_content" />
		<result property="nt_date" column="nt_date" />
		<result property="nt_count" column="nt_count" />
	</resultMap>
	
	<select id="getNoticeList" resultMap="noticeResult">
		SELECT * FROM notice
		WHERE 1=1
		<if test="searchCondition=='nt_title'">
			AND nt_title LIKE '%'||#{searchKeyword}||'%'
		</if>
		<if test="searchCondition=='nt_content'">
			AND nt_content LIKE '%'||#{searchKeyword}||'%'
		</if>
		order by nt_seq desc
	</select>
	
	<!-- 공지사항 등록 -->
	<insert id="admin_notice_insert" parameterType="NoticeVO">
		INSERT INTO notice (nt_seq, nt_title, nt_writer, nt_content,nt_imp)
		VALUES(nextval('nt_seq'), #{nt_title}, #{nt_writer}, #{nt_content},#{nt_imp})
	</insert>
	
	<!-- 공지사항 업데이트 -->
	<update id="admin_notice_update" parameterType="NoticeVO">
		UPDATE notice
		SET
		nt_title=#{nt_title}, nt_content=#{nt_content}
		WHERE nt_seq = #{nt_seq}
	</update>
	
	<!-- 공지사항 삭제 -->
	<delete id="admin_notice_delete" parameterType="NoticeVO">
		DELETE FROM notice WHERE
		nt_seq = #{nt_seq}
	</delete>
	
	<!-- 공지사항 상세보기 -->
	<select id="getNotice" resultType="NoticeVO">
		SELECT * FROM notice WHERE nt_seq = #{nt_seq}
	</select>
	
	
	
	<select id="getNoticePageList" resultType="NoticeVO">
		select * from 
			(select * from notice where nt_imp = 1 order by nt_date desc) as one
		union all
		select * from 
			(select * from (select * from notice where nt_imp = 0 order by nt_seq asc) as three
			  order by nt_date desc, nt_seq desc limit #{listSize} offset #{startList} ) as two;
	</select>	
	
	
	
	
	<select id="getNoticeSearchCnt" parameterType="String" resultType="int">
		select count(*) from notice
	<trim prefix="WHERE" prefixOverrides="AND|OR">
	<if test="keyword != null and keyword != '' ">
			<if test="searchType=='nt_title'">
				AND nt_title like CONCAT('%', #{keyword}, '%')
			</if>

			<if test="searchType=='nt_content'">
				AND nt_content like CONCAT('%', #{keyword}, '%')
			</if>
      </if>
	</trim>
	</select>
	
	<select id="getNoticeSearchPagingList" resultType="NoticeVO">
		select
			nt_seq,
			nt_title,
			nt_writer,
			nt_content,
			nt_date
			nt_cnt
		from notice
		where 1=1
		<if test="searchType=='nt_title' and keyword != null and keyword != '' ">
			AND nt_title like CONCAT('%', #{keyword}, '%')
		</if>
		<if test="searchType=='nt_content' and keyword != null and keyword != '' ">
			AND nt_content like CONCAT('%', #{keyword}, '%')
		</if>
		order by nt_seq desc
		limit #{listSize} offset #{startList}
	</select>
	
	<select id="getNoticeListCnt" resultType="int">
		select count(*) from notice
	</select>
	
</mapper>
